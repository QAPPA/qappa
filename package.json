{
    "name": "qappa",
    "version": "1.0.0",
    "description": "Quality Agile Project Planning Application",
    "author": "Vladimír Fojtík",
    "private": true,
    "scripts": {
        "client:dev": "nuxt",
        "client:build": "nuxt build",
        "client:start": "nuxt start",
        "client:generate": "nuxt generate",
        "client:lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "server:dev": "node_modules/.bin/nodemon",
        "server:start": "ts-node server/src/index.ts",
        "server:lint": "node_modules/.bin/tslint --project tsconfig.json --exclude server/src/migrations/*.ts",
        "test": "jest --runInBand",
        "test:watch": "jest --runInBand --watchAll",
        "to": "node tsnode-typeorm"
    },
    "dependencies": {
        "@nuxtjs/auth": "^4.5.1",
        "@nuxtjs/axios": "^5.3.1",
        "bcrypt": "^3.0.0",
        "bootstrap-vue": "^2.0.0-rc.11",
        "config": "^1.31.0",
        "cors": "^2.8.4",
        "element-ui": "^2.4.5",
        "express": "^4.16.3",
        "jest": "^23.4.2",
        "joi": "^13.5.2",
        "jsonwebtoken": "^8.3.0",
        "lodash": "^4.17.10",
        "mysql2": "^1.6.1",
        "nuxt": "^1.4.2",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "path-to-regexp": "^2.2.1",
        "reflect-metadata": "^0.1.12",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.2",
        "typeorm": "^0.2.7",
        "vue": "^2.5.17"
    },
    "devDependencies": {
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/joi": "^13.4.0",
        "@types/lodash": "^4.14.116",
        "@types/node": "^10.5.6",
        "@types/passport": "^0.4.6",
        "@types/passport-jwt": "^3.0.1",
        "@types/supertest": "^2.0.5",
        "babel-eslint": "^8.2.1",
        "cross-env": "^5.0.1",
        "eslint": "^4.15.0",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-vue": "^4.7.1",
        "node-sass": "^4.9.2",
        "nodemon": "^1.18.3",
        "sass-loader": "^7.1.0",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "tslint-config-airbnb": "^5.9.2",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/server/dist/"
        ],
        "moduleNameMapper": {
            "^@server/(.*)$": "<rootDir>/server/src/$1"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
