{
    "name": "qappa",
    "version": "1.0.0",
    "description": "Quality Agile Project Planning Application",
    "author": "Vladimír Fojtík",
    "private": true,
    "scripts": {
        "client:dev": "nuxt",
        "client:build": "nuxt build",
        "client:start": "nuxt start",
        "client:generate": "nuxt generate",
        "client:lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "server:dev": "node_modules/.bin/nodemon",
        "server:start": "ts-node server/src/index.ts",
        "server:lint": "node_modules/.bin/tslint --project tsconfig.json --exclude server/src/migrations/*.ts",
        "to": "node tsnode-typeorm"
    },
    "dependencies": {
        "bcrypt": "^3.0.0",
        "config": "^1.30.0",
        "element-ui": "^1.4.9",
        "express": "^4.16.3",
        "jest": "^23.4.1",
        "joi": "^13.4.0",
        "jsonwebtoken": "^8.3.0",
        "lodash": "^4.17.10",
        "mysql2": "^1.5.3",
        "nuxt": "^1.4.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.12",
        "ts-jest": "^23.0.1",
        "typeorm": "^0.2.7",
        "vue": "^2.5.16"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.0",
        "@types/joi": "^13.4.0",
        "@types/lodash": "^4.14.112",
        "@types/node": "^10.5.2",
        "@types/passport": "^0.4.5",
        "@types/passport-jwt": "^3.0.1",
        "babel-eslint": "^8.2.1",
        "cross-env": "^5.0.1",
        "eslint": "^4.15.0",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-vue": "^4.0.0",
        "nodemon": "^1.18.2",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "tslint-config-airbnb": "^5.9.2",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
